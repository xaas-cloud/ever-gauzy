	"main": "build/src/index.js",
	"scripts": {
		"build": "rm -rf build && tsc && chmod 755 build/src/index.js",
		"start": "yarn nx electron server-mcp",
		"start:dev": "yarn nx electron-dev server-mcp",
		"start:mcp": "yarn nx serve server-mcp",
		"start:mcp-test": "yarn nx serve-mcp server-mcp",
		"dev": "yarn nx serve server-mcp:development",
		"test": "yarn nx test server-mcp",
		"lint": "yarn nx lint server-mcp"
	},
