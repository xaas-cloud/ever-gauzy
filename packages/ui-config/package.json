{
	"name": "@gauzy/ui-config",
	"version": "0.1.0",
	"description": "A configuration library for the Gauzy framework, providing environment settings and configurations to be shared across various Angular applications within the Gauzy ecosystem.",
	"author": {
		"name": "Ever Co. LTD",
		"email": "ever@ever.co",
		"url": "https://ever.co"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ever-co/ever-gauzy",
		"directory": "packages/ui-config"
	},
	"bugs": {
		"url": "https://github.com/ever-co/ever-gauzy/issues"
	},
	"homepage": "https://ever.co",
	"license": "AGPL-3.0",
	"private": true,
	"scripts": {
		"lib:build": "yarn nx build ui-config --configuration=development",
		"lib:build:prod": "yarn nx build ui-config --configuration=production",
		"lib:watch": "yarn nx build ui-config --watch --configuration=development",
		"generate-env": "yarn cross-env ts-node ../../.scripts/configure.ts",
		"generate-env:prod": "yarn cross-env NODE_ENV=production yarn generate-env --environment=prod",
		"generate-env:dev": "yarn cross-env NODE_ENV=development yarn generate-env --environment=dev",
		"replace-env": "yarn cross-env ts-node scripts/replace-env-files.ts",
		"replace-env:prod": "yarn cross-env NODE_ENV=production yarn replace-env",
		"replace-env:dev": "yarn cross-env NODE_ENV=development yarn replace-env",
		"setup-env": "yarn generate-env && yarn replace-env",
		"setup-env:prod": "yarn generate-env:prod && yarn replace-env:prod",
		"setup-env:dev": "yarn generate-env:dev && yarn replace-env:dev"
	},
	"peerDependencies": {
		"@angular/common": "^20.2.4",
		"@angular/core": "^20.2.4"
	},
	"dependencies": {
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@types/jest": "29.5.14",
		"@types/node": "^24.10.0",
		"cross-env": "^10.1.0",
		"ts-node": "^10.9.2",
		"jest-preset-angular": "14.6.2"
	},
	"keywords": [
		"gauzy",
		"angular",
		"configuration",
		"environment",
		"settings",
		"library"
	],
	"engines": {
		"node": ">=22",
		"yarn": ">=1.22"
	},
	"sideEffects": false
}
