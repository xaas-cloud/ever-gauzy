{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"declaration": true,
		"declarationMap": true,
		"inlineSources": true,
		"incremental": true,
		"baseUrl": "../..",
		"paths": {
			"@gauzy/ui-core/*": ["./packages/ui-core/*/src/index.ts"],
			"@gauzy/ui-config": ["./packages/ui-config/src/index.ts"],
			"@gauzy/contracts": ["./packages/contracts/src/index.ts"],
			"@gauzy/constants": ["./packages/constants/src/index.ts"]
		}
	},
	"exclude": ["src/**/*.spec.ts", "src/test-setup.ts", "jest.config.ts", "src/**/*.test.ts"],
	"include": [
		"src/**/*.ts",
		"common/**/*.ts",
		"core/**/*.ts",
		"i18n/**/*.ts",
		"shared/**/*.ts",
		"theme/**/*.ts",
		"typings.d.ts"
	]
}
